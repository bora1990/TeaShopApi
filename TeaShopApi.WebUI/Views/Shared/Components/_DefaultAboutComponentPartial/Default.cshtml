
@using TeaShopApi.WebUI.Dtos.AboutDtos
@model List<ResultAboutDto>


<section id="sectionabout" class="about_section layout_padding">

  

<div class="about_section layout_padding" id="about">
    <div id="my_main_slider" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            @foreach (var item in Model)
            {

                
                if (item == Model.First())
                {
                    
                <div class="carousel-item active">
                    <div class="container">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="about_main">
                                <h1 class="about_taital">@item.Title</h1>
                                    <p class="about_text">
                                    @item.Description...
                                    </p>
                                    <div class="readmore_bt"><a href="#">Devamını Oku</a></div>
                                </div>
                            </div>
                            <div class="col-md-6 ">
                                    <img src="@item.ImageUrl" width="600px" alt="bora" />
                            </div>
                        </div>
                    </div>
                    </div>
                }
                else
                {
                    <div class="carousel-item">
                        <div class="container">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="about_main">
                                        <h1 class="about_taital">@item.Title</h1>
                                        <p class="about_text">
                                            @item.Description ...
                                        </p>
                                        <div class="readmore_bt"><a href="#">Devamını Oku</a></div>
                                    </div>
                                </div>
                                <div class="col-md-6 ">

                                <img src="@item.ImageUrl" alt="boraa" width="600px" />
                                </div>
                            </div>
                        </div>
                    </div>
                }

            }
        </div>
        <a class="carousel-control-prev" href="#my_main_slider" role="button" data-slide="next">
            <i class="fa fa-angle-left"></i>
        </a>
        <a class="carousel-control-next" href="#my_main_slider" role="button" data-slide="next">
            <i class="fa fa-angle-right"></i>
        </a>
    </div>
</div>

</section>