@using TeaShopApi.WebUI.Dtos.AboutDtos
@model UpdateAboutDto
@{
    ViewData["Title"] = "UpdateDrink";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<h1>Açıklama Güncelle</h1>

<form method="post">

    <input type="hidden" asp-for="AboutID" />
    <br />

    <label>Başlık</label>
    <input type="text" asp-for="Title" class="form-control" />
    <br />
    <label>Açıklama</label>
    <input type="text" asp-for="Description" class="form-control" />
    <br />

    <label> Görseli</label>
    <input type="text" asp-for="ImageUrl" class="form-control" />
    <br />
    <button class="btn btn-primary">Açıklama Güncelle</button>

</form>